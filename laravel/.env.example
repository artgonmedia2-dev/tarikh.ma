# Tarikh.ma — Exemple de configuration
# À copier en .env dans votre projet Laravel (après "composer create-project laravel/laravel ...")
# Puis : php artisan key:generate

APP_NAME=Tarikh
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Africa/Casablanca
APP_URL=http://localhost:8000

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=tarikh_ma
DB_USERNAME=root
DB_PASSWORD=

# Sanctum (frontend React en dev)
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1,localhost:5173

# Session (optionnel)
SESSION_DRIVER=file
CACHE_STORE=file

# CORS : autoriser le frontend (config/cors.php)
# 'allowed_origins' => [env('FRONTEND_URL', 'http://localhost:5173')],
FRONTEND_URL=http://localhost:5173
